datacenter = "{{ consul_datacenter }}"
node_name = "{{ ansible_hostname }}"
data_dir = "/opt/consul"
encrypt = "{{ consul_encrypt }}"

{% if consul_server %}
server = true

auto_encrypt {
  allow_tls = true
}

tls {
  defaults {
    verify_incoming = true
    verify_outgoing = true
    ca_file = "/etc/consul.d/consul-agent-ca.pem"
    cert_file = "/etc/consul.d/consul-server-{{ ansible_hostname }}.pem"
    key_file = "/etc/consul.d/consul-server-key-{{ ansible_hostname }}.pem"
  }

  internal_rpc {
    verify_server_hostname = true
  }
}

ui_config {
  enabled = true
}

client_addr = "{{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'] }}"

bootstrap_expect = {{ consul_bootstrap_expect }}
{% else %}
auto_encrypt {
  tls = true
}

tls {
  defaults {
    verify_incoming = false
    verify_outgoing = true
    ca_file = "/etc/consul.d/consul-agent-ca.pem"
  }
}
{% endif %}

retry_join = {{ consul_retry_join | tojson }}
