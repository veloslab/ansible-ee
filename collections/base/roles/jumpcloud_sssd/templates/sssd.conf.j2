[sssd]
config_file_version = 2
services = nss,pam,ssh
domains = jumpcloud

[nss]

[pam]

[domain/jumpcloud]
debug_level = 2
id_provider = ldap
enumerate=true
auth_provider=ldap
ldap_uri = ldaps://ldap.jumpcloud.com:636
ldap_search_base = o={{ jumpcloud_organization }},dc=jumpcloud,dc=com
ldap_default_bind_dn = uid={{ jumpcloud_bind_user }},ou=Users,o={{ jumpcloud_organization }},dc=jumpcloud,dc=com
ldap_default_authtok = {{ jumpcloud_bind_password }}

ldap_user_ssh_public_key = sshKey
ldap_use_tokengroups = False
ldap_tls_cacert = /etc/ssl/certs/ca-certificates.crt
sudo_provider = none
